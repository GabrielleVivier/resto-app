  <header>
    <h3> Add a comment </h3> <br>
  </header>

<%= form_for([@restaurant, @restaurant.reviews.build]) do |f| %>
  <div class="row">
    <div class="col-xs-6 col-sm-6 col-md-6 col-md-6">
      <div class="form-group">
        <%= f.label :content %><br>
        <%= f.text_area :content, class: "form-control", rows: "7"%>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-6 col-sm-6 col-md-6 col-md-6">
      <div class="form-group">
        <%= f.label :rating %><br>
        <%= f.select :rating, [1, 2, 3, 4, 5], {}, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-6 col-sm-6 col-md-6 col-md-6">
      <div class="form-actions">
        <%= f.submit :class => "btn btn-primary"%>
      </div>
    </div>
  </div>
  <% end %>

