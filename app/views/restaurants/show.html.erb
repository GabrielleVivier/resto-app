
  <header class="page-header">
    <h1> <%= @restaurant.name %> </h1> <br>
    <p> <%= link_to "Get back to the restaurant's list", restaurants_path%></p>
  </header>


  <div>
    <div class="col-xs-6 col-sm-6 col-md-6 col-md-6">
      <section>
       <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Average rating</h3>
        </div>
         <div class="panel-body">
          <%= @restaurant.reviews.average(:rating).to_i %>
        </div>
      </div>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Address</h3>
        </div>
         <div class="panel-body">
          <%= @restaurant.address %>
        </div>
      </div>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Phone</h3>
        </div>
         <div class="panel-body">
          <%= @restaurant.phone %>
        </div>
      </div>
      <div class="panel panel-default">
  <!-- Default panel contents -->
        <div class="panel-heading"><h3 class="panel-title">Reviews </h3></div>

          <!-- Table -->
        <table class="table">
              <tr>
                <th>#</th>
                <th>Content</th>
                <th>Rating</th>
              </tr>
          <% @restaurant.reviews.each_with_index do |review, index| %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= review.content %></td>
              <td><%= review.rating %></td>
            </tr>
          <% end%>
        </table>

      </section>
    </div>

    <div class="col-xs-6 col-sm-6 col-md-6 col-md-6 comment well">
      <%= render 'reviews/form' %>
    </div>
  </div>

