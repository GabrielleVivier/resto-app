<div class="page-header">
  <h1>Add a restaurant</h1> <br>
  <p> <%= link_to "Get back to the restaurant's list", restaurants_path%></p>
</div>
<div class="col-xs-6 col-sm-6 col-md-6 col-md-6">
  <%= form_for @restaurant, html: {role:"form"} do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %> <br>
    <%= f.label :address %>
    <%= f.text_field :address, class: "form-control"%> <br>
    <%= f.label :phone %>
    <%= f.text_field :phone, class: "form-control"%> <br>
    <%= f.label :category %>
    <%= f.select :category, Restaurant::CATEGORIES, {}, class: "form-control" %> <br>
    <%= f.submit :class => "btn btn-primary"%>
  <% end %>
</div>