<div class="container">
  <div class="page-header">
    <h1>Restaurant's list</h1> <br>
    <p> <%= link_to 'Add a restaurant to the list', new_restaurant_path%></p>
  </div>

  <table class="table">
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Category</th>
      <th>Number of reviews</th>
      <th>Average rating</th>
      <th>Details</th>
    </tr>

   <% @restaurants.each do |restaurant| %>
       <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.phone %></td>
        <td><%= restaurant.category %></td>
        <td class="center"><%= restaurant.reviews.size %></td>
        <td class="center"><%= restaurant.reviews.average(:rating).to_i %></td>
        <td class="center"><%= link_to 'Go', restaurant_path(restaurant) %></td>
      </tr>
    <% end %>
</div>

</table>